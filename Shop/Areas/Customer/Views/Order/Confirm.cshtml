@model Shop.Models.ViewModels.OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="box-shadow">
    <div class="row px-3">
        <div class="col-8">
            <h2 class="text-info">Order Confirmed</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success form-control">New Order</a>

        </div>
    </div>

    @if (Model.OrderHeader != null)
    {
        <div class="p-3" style="color:darkslategrey">
            Your odrer has been confirmed! Please see the order summary below.
        </div>
        <br />
        <partial name="_IndividualOrderDetailsView" model="Model" />
    }
    else
    {
        <div class="text-danger">
            Error, Please try again.
        </div>
    }
</div>

