@model Shop.Models.ShippingMethod
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<br />
<br /><br />
<form asp-action="Delete" method="post">
    <div class="border rounded bg-light px-md-4 p-4">
