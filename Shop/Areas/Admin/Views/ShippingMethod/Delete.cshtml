            <div class="col-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input readonly class="form-control" asp-for="Name" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Price"></label>
            </div>
            <div class="col-6">
                <input readonly class="form-control" asp-for="Price" />
            </div>
        </div>
        <partial name="_DeleteandBackPartial" model="Model.Id" />
    </div>
</form>
