@model Shop.Models.Coupon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h3 class="text-info">Create</h3>
<br /><br />
<form asp-action="Create" method="post">
    <div class="border rounded bg-light px-md-4 p-4">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Name" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="CouponType"></label>
            </div>
            <div class="col-6">
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.EcouponType>()" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Discount"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Discount" />
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="MininumAmount"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="MininumAmount" />
            </div>
            <span asp-validation-for="MininumAmount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="IsActive"></label>
            </div>
            <div class="col-6">
                <input type="checkbox"asp-for="IsActive" />
            </div>
        </div>
        <partial name="_EditAndBackPartial" model="Model.Id" />
    </div>
</form>
@section Scripts{   @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
