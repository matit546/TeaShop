@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="border rounded  bg-light p-4">
    <div class="row">
        <div class="col-6 px-md-4 ">
            <h3 class="text-info">List</h3>
        </div>

        <div class="col-6 text-right px-md-4">
            <partial name="_CreatePartial" />
        </div>
    </div>
    <br />
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => x.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.MininumAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.IsActive)
                    </th>
                    <th>
                    </th>
                    <td></td>

                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(x => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.MininumAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.IsActive)
                    </td>
                    <td>
                        <partial name="_DetailsEditDeletePartial" model="item.Id" />
                    </td>
                </tr>
                }
            </table>
        }
        else
        {
            <b class="px-md-3">No Coupons exists </b>
        }
    </div>
</div>