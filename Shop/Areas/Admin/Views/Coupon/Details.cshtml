@model Shop.Models.Coupon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h3 class="text-info">Create</h3>
<br /><br />
<form asp-action="Create" method="post">
    <div class="border rounded bg-light px-md-4 p-4">
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input class="form-control" readonly asp-for="Name" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="CouponType"></label>
            </div>
            <div class="col-6">
                <select asp-for="CouponType" disabled asp-items="Html.GetEnumSelectList<Coupon.EcouponType>()" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Discount"></label>
            </div>
            <div class="col-6">
                <input class="form-control" readonly asp-for="Discount" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="MininumAmount"></label>
            </div>
            <div class="col-6">
                <input class="form-control" readonly asp-for="MininumAmount" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="IsActive"></label>
            </div>
            <div class="col-6">
                <input type="checkbox" disabled asp-for="IsActive" />
            </div>
        </div>
        <div class="row">
            <div class="offset-2 col-3">
                <a asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-success form-control">Edit</a>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-secondary form-control">Back</a>
            </div>
        </div>
    </div>
</form>
@section Scripts{   @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
