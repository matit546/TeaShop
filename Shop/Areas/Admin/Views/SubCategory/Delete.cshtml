@model Shop.Models.ViewModels.SubCategory_Category_ViewModel
@using Shop.Extensions

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3 class="text-info">Delete</h3>
<br /><br />

<div class="border rounded bg-light row">
    <div class="col-8 border-right ">
        <form asp-action="Delete" method="post">
            <div class="px-md-4 p-4">
                <div class="form-group row">
                    <div class="col-2">
                        <label class="col-form-label" asp-for="SubCategory.CategoryId"></label>
                    </div>
                    <div class="col-6">
                        <select id="Categorylist" asp-for="SubCategory.CategoryId" disabled asp-items="Model.CategoryList.ToSelectListItems(Model.SubCategory.CategoryId)" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label class="col-form-label" asp-for="SubCategory.Name"></label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" readonly asp-for="SubCategory.Name" />
                    </div>
                </div>
                <partial name="_DeleteandBackPartial" model="Model.SubCategory.Id" />
            </div>
            </form>
    </div>
</div>
