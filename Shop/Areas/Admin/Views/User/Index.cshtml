@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="border rounded  bg-light p-4">
    <div class="row">
        <div class="col-6 px-md-4 ">
            <h3 class="text-info">Users List</h3>
        </div>

        <div class="col-6 text-right px-md-4">
           <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="fa fa-user-plus"></i>&nbsp;New Employee Registration</a>
        </div>
    </div>
    <br />
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => x.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Role)
                    </th>
                    <td></td>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(x => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Role)
                    </td>

                    <td>
                        @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                        {
                            <a class="btn btn-danger" asp-action="Lock" asp-route-id="@item.Id"> <i class="fa fa-lock"></i></a>
                        }
                        else
                        {
                            <a class="btn btn-success" asp-action="Unlock" asp-route-id="@item.Id"> <i class="fa fa-unlock"></i></a>
                        }

                    </td>
                </tr>
                }
            </table>
        }
        else
        {
            <b class="px-md-3">No Users </b>
        }
    </div>
</div>